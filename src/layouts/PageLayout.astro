---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';

// WICHTIG: Importiere die Funktion statt der statischen Daten
import { getHeaderData, getFooterData } from '~/navigation';

import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
}

const { metadata } = Astro.props;

// Sprache ermitteln (Default auf 'en')
const { lang } = Astro.params;
const currentLang = lang || 'en';

// Daten passend zur Sprache laden
const headerData = getHeaderData(currentLang);
const footerData = getFooterData(currentLang);
---

<Layout metadata={metadata}>
  <slot name="header">
    <Header {...headerData} isSticky showToggleTheme />
  </slot>

  <main>
    <slot />
  </main>

  <slot name="footer">
    <Footer {...footerData} />
  </slot>
</Layout>

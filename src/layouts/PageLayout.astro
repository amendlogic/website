---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';

import { getHeaderData, getFooterData } from '~/navigation';
import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
  headerData?: any;
  footerData?: any;
}

const { metadata, headerData: headerProps, footerData: footerProps } = Astro.props;

// Sprache ermitteln
const { lang } = Astro.params;
const currentLang = lang || 'en';

// Header-Daten laden
const headerData = headerProps || getHeaderData(currentLang);

// Standard Footer-Daten
const defaultFooterData = getFooterData(currentLang);

// Footer-Daten zusammenf√ºhren und Footnotes deduplizieren
const footerData = {
  ...defaultFooterData,
  ...footerProps,
  footnotes: Array.from(
    new Set([
      ...(defaultFooterData.footnotes || []),
      ...(footerProps?.footnotes || [])
    ])
  )
};
---

<Layout metadata={metadata}>
  <slot name="header">
    <Header {...headerData} isSticky showToggleTheme showLangSwitcher />
  </slot>

  <main>
    <slot />
  </main>

  <slot name="footer">
    <Footer {...footerData} />
  </slot>
</Layout>

---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';

import { getHeaderData, getFooterData } from '~/navigation';
import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
  // Wir erlauben, dass headerData und footerData von au√üen reingegeben werden
  headerData?: any; 
  footerData?: any;
}

const { metadata, headerData: headerProps, footerData: footerProps } = Astro.props;

// Sprache ermitteln
const { lang } = Astro.params;
const currentLang = lang || 'en';

const headerData = headerProps || getHeaderData(currentLang);
const defaultFooterData = getFooterData(currentLang);

const footerData = {
  ...defaultFooterData,
  ...footerProps,
  footnotes: [
    ...(defaultFooterData.footnotes || []),
    ...(footerProps?.footnotes || [])
  ]
};
---

<Layout metadata={metadata}>
  <slot name="header">
    <Header {...headerData} isSticky showToggleTheme />
  </slot>

  <main>
    <slot />
  </main>

  <slot name="footer">
    <Footer {...footerData} />
  </slot>
</Layout>

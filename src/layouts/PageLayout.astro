---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';

import { getHeaderData, getFooterData } from '~/navigation';
import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
  // Wir erlauben, dass headerData und footerData von außen reingegeben werden
  headerData?: any; 
  footerData?: any;
}

const { metadata, headerData: headerProps, footerData: footerProps } = Astro.props;

// Sprache ermitteln
const { lang } = Astro.params;
const currentLang = lang || 'en';

// --- FIX START ---
// Priorität: 
// 1. Wenn Daten von der Seite (index.astro) kommen -> Nimm die! (Da steckt der Disclaimer drin)
// 2. Wenn keine Daten kommen -> Hol dir die Standard-Daten aus navigation.ts

const headerData = headerProps || getHeaderData(currentLang);
const footerData = footerProps || getFooterData(currentLang);
// --- FIX ENDE ---
---

<Layout metadata={metadata}>
  <slot name="header">
    <Header {...headerData} isSticky showToggleTheme />
  </slot>

  <main>
    <slot />
  </main>

  <slot name="footer">
    <Footer {...footerData} />
  </slot>
</Layout>

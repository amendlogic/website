---
import Layout from '~/layouts/Layout.astro';
import { getHomePermalink } from '~/utils/permalinks';
import { getHeaderData, getFooterData } from '~/navigation';
import { LANGUAGES, DEFAULT_LANG } from '~/i18n/utils';
import { useTranslations } from '~/i18n/utils';

// 2️⃣ Sprache & Übersetzungen
const pathname = Astro.url.pathname;
const langFromUrl = pathname.split('/')[1];

const lang = LANGUAGES[langFromUrl]
  ? langFromUrl
  : DEFAULT_LANG;

const t = useTranslations(lang);

// Header/FooterF
const headerData = getHeaderData(lang);
const footerData = getFooterData(lang);

const title = t('404.title') || 'Error 404';
---
<Layout metadata={{ title }} headerData={headerData} footerData={footerData}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-9xl">
          <span class="sr-only">Error</span>
          <span class="text-primary">404</span>
        </h2>
        <p class="text-3xl font-semibold md:text-3xl">{t('404.message') || "Sorry, we couldn't find this page."}</p>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">
          {t('404.suggestion')}{t('faq.faq.tagline')}
        </p>
        <a rel="noopener noreferrer" href={getHomePermalink(lang)} class="btn ml-4">{t('404.backHome') || 'Back to homepage'}</a>
      </div>
    </div>
  </section>
</Layout>

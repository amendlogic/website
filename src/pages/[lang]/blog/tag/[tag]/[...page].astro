---
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro';
import { blogTagRobots, fetchPosts, blogPostsPerPage } from '~/utils/blog';
import { LANGUAGES } from '~/i18n/config';
import Layout from '~/layouts/PageLayout.astro';
import BlogList from '~/components/blog/List.astro';
import Headline from '~/components/blog/Headline.astro';
import Pagination from '~/components/blog/Pagination.astro';

export const prerender = true;

export const getStaticPaths = (async ({ paginate }) => {
  const locales = Object.keys(LANGUAGES);
  const allPosts = await fetchPosts();

  const paths = await Promise.all(
    locales.map(async (lang) => {
      const tags = new Set<string>();
      allPosts.forEach((post) => {
        post.tags?.forEach(t => tags.add(t.slug));
      });

      return Array.from(tags).flatMap((tagSlug) => {
        let tagPosts = allPosts.filter(
          (post) => post.lang === lang && post.tags?.some(t => t.slug === tagSlug)
        );
        let isFallback = false;

        if (tagPosts.length === 0) {
          tagPosts = allPosts.filter((post) => post.tags?.some(t => t.slug === tagSlug));
          isFallback = true;
        }

        const tagData = tagPosts[0]?.tags.find(t => t.slug === tagSlug);

        return paginate(tagPosts, {
          params: { lang, tag: tagSlug },
          pageSize: blogPostsPerPage || 6,
          props: { tag: tagData, isFallback },
        });
      });
    })
  );

  return paths.flat();
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;
const { page, tag, isFallback } = Astro.props;
const { lang } = Astro.params;

const metadata = {
  title: tag?.title || 'Tag',
  robots: { index: !isFallback && blogTagRobots?.index, follow: true },
};
---

<Layout metadata={metadata}>
    {isFallback && (
      <Notice title={lang === 'de' ? 'Kategorie leer' : 'Category empty'}>
        {lang === 'de' 
          ? `Zu diesem Tag gibt es noch keine deutschen Beiträge. Wir zeigen dir alle verfügbaren Artikel.` 
          : `No posts found for this tag in the selected language. Showing all available posts.`}
      </Notice>
    )}

  <section class="px-4 md:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    <Headline> Tag: {tag?.title} </Headline>
    <BlogList posts={page.data} />
    <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
  </section>
</Layout>

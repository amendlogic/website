---
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro';

// 1. WICHTIG: Alle Variablen aus deiner neuen blog.ts importieren
import { fetchPosts, blogPostsPerPage, blogListRobots } from '~/utils/blog';

import Layout from '~/layouts/PageLayout.astro';
import BlogList from '~/components/blog/List.astro';
import Headline from '~/components/blog/Headline.astro';
import Pagination from '~/components/blog/Pagination.astro';

export const prerender = true;

export const getStaticPaths = (async ({ paginate }) => {
  // Deine unterstützten Sprachen
  const LANGUAGES = ['en', 'de'];

  // 2. WICHTIG: Wir warten auf alle Promises (async fetchPosts)
  const paths = await Promise.all(
    LANGUAGES.map(async (lang) => {
      // Posts für die spezifische Sprache laden
      const langPosts = await fetchPosts(lang);

      // Pagination erstellen
      return paginate(langPosts, {
        params: { lang }, // Die Sprache als Parameter für die URL
        pageSize: blogPostsPerPage || 6,
      });
    })
  );

  // Das Ergebnis flachklopfen (Array von Arrays -> Ein Array)
  return paths.flat();
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { page } = Astro.props;
const { lang } = Astro.params;

const currentPage = page.currentPage ?? 1;

// 3. Metadaten erstellen
const metadata = {
  title: `Blog${currentPage > 1 ? ` — Seite ${currentPage}` : ''}`,
  robots: {
    // Nur die erste Seite indexieren, aber Links auf allen Seiten folgen
    index: blogListRobots?.index && currentPage === 1,
    follow: blogListRobots?.follow,
  },
  openGraph: {
    type: 'blog',
  },
};

// Einfache Übersetzungs-Logik für den Header
const titleText = lang === 'de' ? 'Der Blog' : 'The Blog';
const subtitleText = lang === 'de' 
  ? 'Neuigkeiten, Tutorials und Ressourcen für dein Trading.' 
  : 'News, tutorials, and resources for your trading journey.';
---

<Layout metadata={metadata}>
  <section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    
    <Headline subtitle={subtitleText}>
      {titleText}
    </Headline>
    
    <BlogList posts={page.data} />

    <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
    
  </section>
</Layout>

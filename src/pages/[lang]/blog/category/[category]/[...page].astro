---
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro';
import { blogCategoryRobots, fetchPosts, blogPostsPerPage } from '~/utils/blog';
import Layout from '~/layouts/PageLayout.astro';
import BlogList from '~/components/blog/List.astro';
import Headline from '~/components/blog/Headline.astro';
import Pagination from '~/components/blog/Pagination.astro';

export const prerender = true;

export const getStaticPaths = (async ({ paginate }) => {
  const LANGUAGES = ['en', 'de'];

  const paths = await Promise.all(
    LANGUAGES.map(async (lang) => {
      // 1. Posts für die Sprache laden
      const posts = await fetchPosts(lang);
      
      // 2. Alle Kategorien sammeln, die in diesen Posts vorkommen
      const categories = new Set<string>();
      posts.forEach((post) => {
        if (post.category?.slug) {
          categories.add(post.category.slug);
        }
      });

      // 3. Pagination für jede Kategorie erstellen
      return Array.from(categories).flatMap((categorySlug) => {
        // Filtern: Nur Posts dieser Kategorie
        const categoryPosts = posts.filter((post) => post.category?.slug === categorySlug);
        
        // Titel der Kategorie holen (vom ersten Post nehmen)
        const categoryData = categoryPosts[0].category;

        return paginate(categoryPosts, {
          params: { 
            lang: lang, 
            category: categorySlug // WICHTIG: Muss zum Ordnernamen [category] passen
          },
          pageSize: blogPostsPerPage || 6,
          props: { category: categoryData },
        });
      });
    })
  );

  return paths.flat();
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths> & { category: any };

const { page, category } = Astro.props;
const { lang } = Astro.params;

const currentPage = page.currentPage ?? 1;

// Metadaten erstellen
const metadata = {
  title: `Category '${category.title}' ${currentPage > 1 ? ` — Page ${currentPage}` : ''}`,
  robots: {
    index: blogCategoryRobots?.index,
    follow: blogCategoryRobots?.follow,
  },
};

const headlineText = lang === 'de' ? 'Kategorie' : 'Category';
---

<Layout metadata={metadata}>
  <section class="px-4 md:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    <Headline subtitle={`${headlineText}: ${category.title}`}>
      {category.title}
    </Headline>
    
    <BlogList posts={page.data} />
    <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
  </section>
</Layout>

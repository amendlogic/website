---
import { getCollection } from 'astro:content';
import merge from 'lodash.merge';
import Layout from '~/layouts/PageLayout.astro';
import SinglePost from '~/components/blog/SinglePost.astro';
import ToBlogLink from '~/components/blog/ToBlogLink.astro';
import { getCanonical, getPermalink } from '~/utils/permalinks';

export const prerender = true;

// 1. Pfade fÃ¼r jeden einzelnen Post erstellen
export async function getStaticPaths() {
  const posts = await getCollection('post');

  return posts.map((post) => {
    // ID splitten: "en/mein-post.md" -> lang="en", slug="mein-post"
    const [lang, ...slugParts] = post.id.split('/');
    const slug = post.slug || slugParts.join('/').replace(/\.[^/.]+$/, "");

    return {
      params: { lang, slug },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { lang } = Astro.params;

const url = getCanonical(getPermalink(post.permalink || post.slug, 'post', lang));

// 2. Inhalt rendern (Standard Astro Weg)
const { Content } = await post.render();

const metadata = merge(
  {
    title: post.title,
    description: post.excerpt,
    openGraph: {
      type: 'article',
      image: post.image,
    },
  },
  { ...(post?.metadata ? { ...post.metadata, canonical: post.metadata?.canonical || url } : {}) }
);
---

<Layout metadata={metadata}>
  <SinglePost post={post} url={url}>
    <Content />
  </SinglePost>
  <ToBlogLink />
</Layout>

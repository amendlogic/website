---
/**
 * Root-Indexseite für Astro-i18n
 * Blitzschneller Redirect:
 * 1️⃣ gespeicherte Sprache aus localStorage
 * 2️⃣ Browser-Sprache
 * 3️⃣ Fallback = Deutsch
 */

// Notwendig für Astro-i18n Build
export function getStaticPaths() {
  return [{ params: {} }];
}
---

<!doctype html>
<html lang="de">
<head>
  <meta charset="utf-8" />
  <title>Redirecting…</title>

  <!-- Fallback Meta-Redirect -->
  <meta http-equiv="refresh" content="0;url=/de" />

  <!-- Blitzschneller clientseitiger Redirect -->
  <script>
    const saved = localStorage.getItem("lang");
    const browserLang = navigator.language.startsWith("en") ? "en" : "de";
    const lang = saved || browserLang || "de";
    window.location.replace("/" + lang);
  </script>
</head>
<body>
  Redirecting…
</body>
</html>

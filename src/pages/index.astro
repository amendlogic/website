---
/**
 * Schneller, statischer Redirect mit Browser-Lokalisierung
 * Kompatibel mit: Astro + static + GitHub Pages + i18n
 */

// Astro liefert uns bereits die beste Sprache:
const preferred = Astro.preferredLocale;

// Nur erlaubte Sprachen berücksichtigen
const target =
  preferred === "en"
    ? "/en"
    : "/de";   // Fallback = dein Default
---

<!doctype html>
<html lang="de">
<head>
  <meta charset="utf-8" />
  <title>Redirecting…</title>

  <!-- Sofortiger Redirect im Browser -->
  <meta http-equiv="refresh" content={`0;url=${target}`} />

  <script>
    window.location.replace("{{target}}");
  </script>
</head>
<body>
  <p>Redirecting to {{target}} …</p>
</body>
</html>

---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }

    /* ========================================================= */
    /* ðŸš€ COOKIE CONSENT â€” MODULARER DESIGN-BLOCK (LIGHT MODE)  */
    /* ========================================================= */

    --cc-font-family: inherit;

    --cc-bg: #ffffff;
    --cc-text: var(--aw-color-text-default);
    --cc-secondary-color: var(--aw-color-text-muted);
    --cc-separator: rgb(229 231 235);

    /* Primary Button */
    --cc-btn-primary-bg: var(--aw-color-primary);
    --cc-btn-primary-text: #ffffff;
    --cc-btn-primary-hover-bg: var(--aw-color-secondary);
    --cc-btn-primary-border-color: var(--aw-color-primary);
    --cc-btn-primary-hover-border-color: var(--aw-color-primary);

    /* Secondary Button */
    --cc-btn-secondary-bg: #ffffff;
    --cc-btn-secondary-text: var(--aw-color-text-default);
    --cc-btn-secondary-hover-bg: rgb(243 244 246);
    --cc-btn-secondary-border-color: rgb(156 163 175);
    --cc-btn-secondary-hover-border-color: rgb(75 85 99);

    /* Toggles */
    --cc-toggle-off-bg: rgb(203 213 225);
    --cc-toggle-on-bg: var(--aw-color-primary);
    --cc-toggle-bg-readonly: var(--aw-color-secondary);
    --cc-toggle-knob-bg: #ffffff;
    --cc-toggle-knob-icon-color: #ecf0f1;

    /* Blocks & Footer */
    --cc-cookie-category-block-bg: #f8fafc;
    --cc-cookie-category-block-hover-bg: #f1f5f9;
    --cc-cookie-category-block-border: rgb(203 213 225);
    --cc-cookie-category-block-hover-border: rgb(203 213 225);

    --cc-footer-bg: rgb(239 246 255);

    /* Form */
    --cc-modal-border-radius: .375rem;
    --cc-btn-border-radius: .375rem;
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }

  /* ========================================================= */
  /* ðŸš€ COOKIE CONSENT â€” DARK MODE */
  /* ========================================================= */

    --cc-bg: #030620;
    --cc-text: #f8fafc;
    --cc-separator: rgb(30 41 59);

    --cc-btn-primary-bg: #6366f1;
    --cc-btn-primary-hover-bg: #4f46e5;

    --cc-btn-secondary-bg: #1e293b;
    --cc-btn-secondary-text: #e2e8f0;
    --cc-btn-secondary-hover-bg: #334155;

    --cc-toggle-off-bg: #475569;
    --cc-toggle-on-bg: #6366f1;

    --cc-cookie-category-block-bg: #0f172a;
    --cc-cookie-category-block-bg-hover: #1e293b;
  }

  /* ========================================================= */
  /* OPTIONAL: COOKIE CONSENT FEINTUNING */
  /* ========================================================= */
  #cc-main .cm {
    box-shadow:
      var(--tw-ring-offset-shadow, 0 0 #0000),
      var(--tw-ring-shadow, 0 0 #0000),
      0 20px 25px -5px rgb(0 0 0 / .1),
      0 8px 10px -6px rgb(0 0 0 / .1);
  }

  #cc-main .cm__title {
    font-weight: 700;
    letter-spacing: -0.025em;
  }

  #cc-main .cm__btn {
    font-weight: 600;
    transition: all 0.2s ease;
  }

</style>

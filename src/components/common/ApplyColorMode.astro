---
import { UI } from 'astrowind:config';
---

<script is:inline define:vars={{ defaultTheme: UI.theme || 'system' }}>
  const THEME_ORDER = ['light', 'dark', 'system'];

  function applyTheme(theme) {
    const root = document.documentElement;
    root.classList.remove('dark');

    if (theme === 'dark') {
      root.classList.add('dark');
    } else if (theme === 'system') {
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        root.classList.add('dark');
      }
    }

    // Sync buttons with data attribute
    const btns = document.querySelectorAll('[data-aw-toggle-color-scheme]');
    btns.forEach((btn) => {
      const icon = btn.querySelector('svg');
      if (!icon) return;

      if (theme === 'light') btn.dataset.icon = 'tabler:sun';
      else if (theme === 'dark') btn.dataset.icon = 'tabler:moon';
      else btn.dataset.icon = 'tabler:device-desktop';
    });
  }

  // Initial theme
  const storedTheme = localStorage.getItem('theme');
  if (defaultTheme.endsWith(':only')) {
    applyTheme(defaultTheme.replace(':only', ''));
  } else if (storedTheme) {
    applyTheme(storedTheme);
  } else {
    applyTheme(defaultTheme === 'system' ? 'system' : defaultTheme);
  }

  // Listen for OS theme changes
  window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
    const current = localStorage.getItem('theme') ?? 'system';
    if (current === 'system') applyTheme('system');
  });

  // Button click
  document.addEventListener('click', (e) => {
    const btn = e.target.closest('[data-aw-toggle-color-scheme]');
    if (!btn) return;

    const current = localStorage.getItem('theme') ?? 'system';
    const next = THEME_ORDER[(THEME_ORDER.indexOf(current) + 1) % THEME_ORDER.length];

    localStorage.setItem('theme', next);
    applyTheme(next);
  });
</script>
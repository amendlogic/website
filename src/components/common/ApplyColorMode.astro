---
import { Icon } from 'astro-icon/components';
import { UI } from 'astrowind:config';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
}

const {
  label = 'Toggle color mode',
  class: className = 'text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center',
  iconClass = 'w-6 h-6',
} = Astro.props;
---

{!(UI.theme && UI.theme.endsWith(':only')) && (
  <button
    type="button"
    class={className}
    aria-label={label}
    id="colorModeToggleBtn"
  >
    <Icon id="colorModeToggleIcon" name="tabler:device-desktop" class={iconClass} />
  </button>
)}

<script is:inline>
  if (typeof window !== 'undefined') {
    const THEME_ORDER = ['light', 'dark', 'system'];
    const btn = document.getElementById('colorModeToggleBtn');
    const icon = document.getElementById('colorModeToggleIcon');

    const getTheme = () => {
      try { return localStorage.getItem('theme') || 'system'; }
      catch(e) { return 'system'; }
    };

    const applyTheme = (theme) => {
      const root = document.documentElement;
      root.classList.remove('dark');

      if (theme === 'dark') root.classList.add('dark');
      if (theme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches) {
        root.classList.add('dark');
      }

      // Icon wechseln
      if (icon) {
        icon.name = theme === 'light' ? 'tabler:sun'
                   : theme === 'dark' ? 'tabler:moon'
                   : 'tabler:device-desktop';
      }
    };

    // initial theme
    let currentTheme = UI.theme?.endsWith(':only') ? UI.theme.replace(':only', '') : getTheme();
    applyTheme(currentTheme);

    // Klick Handler
    btn.addEventListener('click', () => {
      currentTheme = THEME_ORDER[(THEME_ORDER.indexOf(currentTheme) + 1) % THEME_ORDER.length];
      try { localStorage.setItem('theme', currentTheme); } catch(e){}
      applyTheme(currentTheme);
    });

    // System-Mode Reaktion
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
      if (getTheme() === 'system') applyTheme('system');
    });
  }
</script>
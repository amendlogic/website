---
import { UI } from 'astrowind:config';
---

<script is:inline define:vars={{ defaultTheme: UI.theme || 'system' }}>
  const THEME_ORDER = ['light', 'dark', 'system'];
  let currentTheme = localStorage.getItem('theme') || defaultTheme.replace(':only','');

  // reactive icon name
  let iconName = 'tabler:device-desktop';

  function applyTheme(theme) {
    const root = document.documentElement;
    root.classList.remove('dark');

    if (theme === 'dark') root.classList.add('dark');
    else if (theme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches) {
      root.classList.add('dark');
    }

    // Icon setzen
    if (theme === 'light') iconName = 'tabler:sun';
    else if (theme === 'dark') iconName = 'tabler:moon';
    else iconName = 'tabler:device-desktop';

    // AstroWind checkbox sync (harmlos)
    document.querySelectorAll('[data-aw-toggle-color-scheme] > input').forEach(el => {
      el.checked = theme !== 'dark';
    });
  }

  // initial
  applyTheme(currentTheme);

  // OS theme change
  window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
    if (currentTheme === 'system') applyTheme('system');
  });

  // click handler
  document.addEventListener('click', e => {
    const btn = e.target.closest('[data-aw-toggle-color-scheme]');
    if (!btn) return;

    const next = THEME_ORDER[(THEME_ORDER.indexOf(currentTheme) + 1) % THEME_ORDER.length];
    currentTheme = next;
    localStorage.setItem('theme', currentTheme);
    applyTheme(currentTheme);

    // Button Icon updaten
    const icon = btn.querySelector('astro-icon');
    if (icon) icon.name = iconName;  // reactive binding
  });
</script>
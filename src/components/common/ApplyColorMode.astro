<script is:inline define:vars={{ defaultTheme: UI.theme || 'system' }}>
  const THEME_ORDER = ['system', 'light', 'dark'];

  function applyTheme(theme) {
    const root = document.documentElement;

    // Entferne vorherige dark-Klasse
    root.classList.remove('dark');

    if (theme === 'dark') {
      root.classList.add('dark');
    } else if (theme === 'system') {
      // System-Modus: OS Dark prüfen
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        root.classList.add('dark');
      }
    }

    // Icons aktualisieren
    document.querySelectorAll('[data-aw-theme-icon]').forEach(icon => {
      icon.classList.toggle('hidden', icon.dataset.awThemeIcon !== theme);
    });
  }

  function getTheme() {
    return localStorage.getItem('theme') || 'system';
  }

  function setTheme(theme) {
    localStorage.setItem('theme', theme);
    applyTheme(theme);
  }

  function cycleTheme() {
    const current = getTheme();
    const idx = THEME_ORDER.indexOf(current);
    const next = THEME_ORDER[(idx + 1) % THEME_ORDER.length];
    setTheme(next);
  }

  // Initial load
  if (UI.theme?.endsWith(':only')) {
    setTheme(UI.theme.replace(':only',''));
  } else {
    setTheme(getTheme());
  }

  // Button click
  document.addEventListener('click', e => {
    const btn = e.target.closest('[data-aw-toggle-color-scheme]');
    if (!btn) return;
    cycleTheme();
  });

  // OS-Änderung nur bei System-Modus
  window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
    if (getTheme() === 'system') applyTheme('system');
  });
</script>
---
import { UI } from 'astrowind:config';
---

<script is:inline define:vars={{ defaultTheme: UI.theme || 'system' }}>
  const THEME_ORDER = ['light', 'dark', 'system'];

  function applyTheme(theme) {
    const root = document.documentElement;
    root.classList.remove('dark');

    if (theme === 'dark') {
      root.classList.add('dark');
    } else if (theme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches) {
      root.classList.add('dark');
    }

    // update toggle icons (for AstroWind checkbox sync)
    const toggles = document.querySelectorAll('[data-aw-toggle-color-scheme] > input');
    toggles.forEach((el) => {
      el.checked = theme !== 'dark';
    });

    // update button icon name attribute
    const btn = document.querySelector('[data-aw-toggle-color-scheme] astro-icon');
    if (btn) {
      if (theme === 'light') btn.setAttribute('name', 'tabler:sun');
      else if (theme === 'dark') btn.setAttribute('name', 'tabler:moon');
      else btn.setAttribute('name', 'tabler:device-desktop');
    }
  }

  // initial theme
  const stored = localStorage.getItem('theme');
  let currentTheme = stored || (defaultTheme.endsWith(':only') ? defaultTheme.replace(':only','') : defaultTheme);

  applyTheme(currentTheme);

  // listen for OS theme changes in system mode
  window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
    if (currentTheme === 'system') applyTheme('system');
  });

  // handle click cycle
  document.addEventListener('click', (e) => {
    const btn = e.target.closest('[data-aw-toggle-color-scheme]');
    if (!btn) return;

    const next = THEME_ORDER[(THEME_ORDER.indexOf(currentTheme) + 1) % THEME_ORDER.length];
    currentTheme = next;
    localStorage.setItem('theme', currentTheme);
    applyTheme(currentTheme);
  });
</script>
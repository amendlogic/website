---
import { Icon } from 'astro-icon/components';
import { UI } from 'astrowind:config';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
}

const {
  label = 'Toggle theme between Light / Dark / System',
  class: className = 'text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center',
  iconClass = 'w-6 h-6',
} = Astro.props;
---

{!(UI.theme && UI.theme.endsWith(':only')) && (
  <button
    type="button"
    class={className}
    aria-label={label}
    id="theme-toggle"
  >
    <Icon id="theme-icon" name="tabler:device-desktop" class={iconClass} />
  </button>
)}
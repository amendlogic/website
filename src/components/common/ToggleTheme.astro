---
import { Icon } from 'astro-icon/components';
import { UI } from 'astrowind:config';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
}

const {
  label = 'Toggle color mode',
  class: className = 'text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center',
  iconClass = 'w-6 h-6',
} = Astro.props;
---

<button
  type="button"
  class={className}
  aria-label={label}
  data-color-mode-toggle
>
  <Icon name="tabler:device-desktop" class={iconClass} />
</button>

<script is:inline>
  // --- 3-State Logic ---
  const THEME_ORDER = ['light', 'dark', 'system'];

  // Nur im Browser
  if (typeof window !== 'undefined') {
    const btn = document.querySelector('[data-color-mode-toggle]');
    const icon = btn.querySelector('svg') || btn.querySelector('i') || btn.querySelector('Icon');

    const getTheme = () => {
      try { return localStorage.getItem('theme') || 'system'; }
      catch(e) { return 'system'; }
    };

    const applyTheme = (theme) => {
      document.documentElement.classList.remove('dark');

      if (theme === 'dark') document.documentElement.classList.add('dark');
      if (theme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches) {
        document.documentElement.classList.add('dark');
      }

      // Icon update
      if (icon) {
        const iconName = theme === 'light' ? 'tabler:sun'
                        : theme === 'dark' ? 'tabler:moon'
                        : 'tabler:device-desktop';
        // Astro Icon unterst√ºtzt dynamisches Setzen via `name` Attribut
        if ('name' in icon) {
          icon.name = iconName;
        } else {
          // fallback falls Astro Icon intern <svg> nutzt
          icon.innerHTML = '';
          const i = document.createElement('i');
          i.className = iconName;
          icon.appendChild(i);
        }
      }
    };

    // initial
    let currentTheme = getTheme();
    applyTheme(currentTheme);

    // click handler
    btn.addEventListener('click', () => {
      currentTheme = THEME_ORDER[(THEME_ORDER.indexOf(currentTheme) + 1) % THEME_ORDER.length];
      try { localStorage.setItem('theme', currentTheme); } catch(e){}
      applyTheme(currentTheme);
    });

    // listen to system changes
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
      if (getTheme() === 'system') applyTheme('system');
    });
  }
</script>
---
import { Icon } from 'astro-icon/components';
import { UI } from 'astrowind:config';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
}

const {
  label = 'Toggle theme',
  class:
    className = 'text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg p-2.5 inline-flex items-center',
  iconClass = 'w-6 h-6',
} = Astro.props;
---

{
  !(UI.theme && UI.theme.endsWith(':only')) && (
    <button
      type="button"
      class={className}
      aria-label={label}
      data-aw-theme-toggle
      data-theme="system"
    >
      <Icon name="tabler:device-desktop" class={iconClass} data-icon="system" />
      <Icon name="tabler:sun" class={iconClass + ' hidden'} data-icon="light" />
      <Icon name="tabler:moon" class={iconClass + ' hidden'} data-icon="dark" />
    </button>
  )
}

<script is:inline>
  const order = ['system', 'light', 'dark'];

  function updateIcons(btn, theme) {
    btn.querySelectorAll('[data-icon]').forEach((icon) => {
      icon.classList.toggle('hidden', icon.dataset.icon !== theme);
    });
  }

  document.querySelectorAll('[data-aw-theme-toggle]').forEach((btn) => {
    const current = localStorage.theme || 'system';
    btn.dataset.theme = current;
    updateIcons(btn, current);

    btn.addEventListener('click', () => {
      const next =
        order[(order.indexOf(btn.dataset.theme) + 1) % order.length];

      btn.dataset.theme = next;
      localStorage.theme = next;

      document.documentElement.classList.toggle(
        'dark',
        next === 'dark' ||
          (next === 'system' &&
            window.matchMedia('(prefers-color-scheme: dark)').matches)
      );

      updateIcons(btn, next);
    });
  });
</script>

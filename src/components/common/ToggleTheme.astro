---
import { Icon } from 'astro-icon/components';
import { UI } from 'astrowind:config';

const {
  label = 'Toggle between System/Light/Dark mode',
  class: className = 'text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center',
  iconClass = 'w-6 h-6',
} = Astro.props;
---

{
  !(UI.theme && UI.theme.endsWith(':only')) && (
    <button type="button" class={className} aria-label={label} data-aw-toggle-color-scheme>
      <Icon name="tabler:device-desktop" class={iconClass} data-aw-theme-icon="system" />
      <Icon name="tabler:sun" class={`${iconClass} hidden`} data-aw-theme-icon="light" />
      <Icon name="tabler:moon" class={`${iconClass} hidden`} data-aw-theme-icon="dark" />
    </button>
  )
}

<style is:global>
  [data-aw-theme-icon] {
    transition: opacity 0.2s ease, transform 0.2s ease;
  }
  [data-aw-theme-icon].hidden {
    display: none; /* Wichtig f√ºr Layout */
    opacity: 0;
    pointer-events: none;
  }
</style>

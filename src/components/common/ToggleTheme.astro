---
import { Icon } from 'astro-icon/components';
import { UI } from 'astrowind:config';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
}

const {
  label = 'Toggle color mode',
  class: className = 'text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center',
  iconClass = 'w-6 h-6',
} = Astro.props;
---

<button id="colorModeToggle" class={className} aria-label={label}>
  <Icon id="colorModeIcon" name="tabler:device-desktop" class={iconClass} />
</button>

<script is:inline>
if (typeof window !== 'undefined') {
  const toggleButton = document.getElementById('colorModeToggle');
  const iconEl = document.getElementById('colorModeIcon');
  const THEME_ORDER = ['light', 'dark', 'system'];

  let currentTheme = localStorage.getItem('theme') || (UI.theme?.replace(':only', '') || 'system');

  const getIconName = (theme) => {
    return theme === 'light' ? 'tabler:sun'
         : theme === 'dark' ? 'tabler:moon'
         : 'tabler:device-desktop';
  };

  const applyTheme = (theme) => {
    const root = document.documentElement;
    root.classList.remove('dark');
    if (theme === 'dark') root.classList.add('dark');
    if (theme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches) {
      root.classList.add('dark');
    }

    // Icon updaten
    iconEl.setAttribute('name', getIconName(theme));
  };

  // Initial anwenden
  applyTheme(currentTheme);

  // Klick Handler
  toggleButton.addEventListener('click', () => {
    currentTheme = THEME_ORDER[(THEME_ORDER.indexOf(currentTheme) + 1) % THEME_ORDER.length];
    localStorage.setItem('theme', currentTheme);
    applyTheme(currentTheme);
  });

  // OS System Mode Listener
  window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
    if ((localStorage.getItem('theme') || 'system') === 'system') {
      applyTheme('system');
    }
  });
}
</script>
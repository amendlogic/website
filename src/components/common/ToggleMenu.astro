---
import { Icon } from "astro-icon/components";
import { UI } from "astrowind:config";
---

{!(UI.theme && UI.theme.endsWith(':only')) && (
  <button
    type="button"
    data-aw-theme-toggle
    class="p-2 rounded-lg text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 inline-flex items-center gap-2"
    aria-label="Theme wechseln"
    title="Theme wechseln"
  >
    <span data-icon="system" aria-hidden="true"><Icon name="tabler:device-laptop" class="w-6 h-6" /></span>
    <span data-icon="light"  aria-hidden="true"><Icon name="tabler:sun"           class="w-6 h-6" /></span>
    <span data-icon="dark"   aria-hidden="true"><Icon name="tabler:moon"          class="w-6 h-6" /></span>
  </button>
)}

<style is:global>
  [data-icon] { display: none; }
  html[data-theme-mode="system"] [data-icon="system"],
  html[data-theme-mode="light"]  [data-icon="light"],
  html[data-theme-mode="dark"]   [data-icon="dark"] { display: inline-flex; }
</style>

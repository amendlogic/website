---
import { Icon } from 'astro-icon/components';
import { twMerge } from 'tailwind-merge'; // WICHTIG: Damit Klassen Ã¼berschrieben werden

interface Props {
  title?: string;
  icon?: string;
  class?: string;
}

const {
  title,
  icon = 'tabler:info-circle',
  class: className = '', 
} = Astro.props;

const defaultClasses = "container mx-auto max-w-4xl mt-8 sm:mt-16 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade";
const classes = twMerge(defaultClasses, className);
---

<div class={classes}>
  <div
    class="flex items-start gap-4 p-4 rounded-lg bg-blue-50 dark:bg-slate-800 border-l-4 border-blue-500 dark:border-blue-700 shadow-sm"
    role="alert"
  >
    <Icon name={icon} class="w-6 h-6 flex-shrink-0 mt-0.5 text-blue-500" />
    
    <div>
      {title && (
        <h3 class="font-medium text-sm uppercase tracking-wide mb-1 text-blue-800 dark:text-blue-200">
          {title}
        </h3>
      )}
      
      <div class="text-sm leading-relaxed text-blue-800 dark:text-blue-200">
        <slot />
      </div>
    </div>
  </div>
</div>

---
import Logo from '~/components/Logo2.astro';
import { Icon } from 'astro-icon/components';
import { useTranslations } from '~/i18n/utils';
import { getPermalink, getHomePermalink } from '~/utils/permalinks';
import { getFootnotes } from '~/utils/footnoteRegistry';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
  attrs?: Record<string, string>;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

interface DisclaimerItem {
  text: string;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { lang } = Astro.params;
const t = useTranslations(lang);
const footnotes = getFootnotes();

const { 
  socialLinks = [], 
  secondaryLinks = [], 
  links = [], 
  footNote = '', 
  theme = 'light' 
} = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-gray-200 dark:border-slate-800 not-prose']}>
  <div class="dark:bg-dark absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-300">
    
    <div class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-8 md:py-12">
      <div class="col-span-12 lg:col-span-4">
        <div class="mb-2">
          <a class="inline-block font-bold text-xl" href={getHomePermalink()}>
            <Logo />
          </a>
        </div>
        <div class="text-sm text-muted flex gap-1">
          {
            secondaryLinks.map(({ text, href, attrs }, index) => (
              <>
                {index !== 0 ? ' Â· ' : ''}
                <a
                  class="text-muted hover:text-gray-700 dark:text-gray-400 hover:underline transition duration-150 ease-in-out"
                  href={href}
                  {...attrs}
                  set:html={text}
                />
              </>
            ))
          }
        </div>
      </div>
      
      {/* HAUPT-LINKS BEREICH */}
      {
        links.map(({ title, links }) => (
          <div class="col-span-6 md:col-span-3 lg:col-span-2">
            <div class="dark:text-gray-300 font-medium mb-2">{title}</div>
            {links && Array.isArray(links) && links.length > 0 && (
              <ul class="text-sm">
                {links.map(({ text, href, ariaLabel, icon, attrs }) => (
                  <li class="mb-2">
                    <a
                      class="text-muted hover:text-gray-700 hover:underline dark:text-gray-400 transition duration-150 ease-in-out inline-flex items-center"
                      href={href}
                      aria-label={ariaLabel}
                      {...attrs}
                    >
                      {/* 1. Text zuerst */}
                      <Fragment set:html={text} />
                      
                      {/* 2. Icon dahinter */}
                      {icon && (
                        <Icon name={icon} class="ml-1 text-gray-500 dark:text-gray-400 opacity-50" />
                      )}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))
      }
    </div>

    {/* DISCLAIMER BEREICH */}
    {footnotes.length > 0 && (
      <div class="border-t border-gray-200 dark:border-slate-800 py-6 text-xs text-muted dark:text-slate-400 leading-relaxed">
        
        <ol class="list-decimal list-inside space-y-2">
          {footnotes.map(([key]) => (
            <li id={`footnote-${key}`}>
              <Fragment set:html={t('footnotes.'key)} />
            </li>
          ))}
        </ol>
        
        <p class="mt-2">
          <Fragment set:html={t('footnotes.closing')} />
        </p>
        
      </div>
    )}

    <div class="md:flex md:items-center md:justify-between py-6 md:py-8 border-t border-gray-200 dark:border-slate-800">
      {
        socialLinks?.length ? (
          <ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0 rtl:ml-0 rtl:-mr-2 rtl:md:ml-0 rtl:md:mr-4">
            {socialLinks.map(({ ariaLabel, href, text, icon }) => (
              <li>
                <a
                  class="text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
                  aria-label={ariaLabel}
                  href={href}
                >
                  {/* Bei Social Links ist Icon vorne meist besser, aber das kannst du auch drehen wenn du willst */}
                  {icon && <Icon name={icon} class="w-5 h-5" />}
                  <Fragment set:html={text} />
                </a>
              </li>
            ))}
          </ul>
        ) : (
          ''
        )
      }

      <div class="text-sm mr-4 dark:text-muted prose prose-sm dark:prose-invert prose-a:text-primary hover:prose-a:underline">
        <Fragment set:html={footNote} />
      </div>
    </div>
  </div>
</footer>

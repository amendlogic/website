---
import ChartClient from '~/ChartClient.jsx';

const { 
  title = "", 
  description = "", 
  type = "bar", 
  labels = [], 
  datasets = [] 
} = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow space-y-4">
  {title && <h2 class="text-xl font-bold">{title}</h2>}
  {description && <p class="text-gray-600">{description}</p>}

  <!-- Client:load sorgt dafÃ¼r, dass ChartClient nur im Browser geladen wird -->
  <ChartClient client:load type={type} labels={labels} datasets={datasets} />
</div>
---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';

interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;

  options: Record<string, any>;
  height?: string;

  id?: string;
  isDark?: boolean;
  classes?: {
    container?: string;
  };
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  content = await Astro.slots.render('content'),
  isAfterContent = false,

  options,
  height = '400px',

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

// Unique chart id
const chartId = `echart-${Math.random().toString(36).slice(2, 11)}`;
const serializedOptions = JSON.stringify(options);
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-6xl mx-auto ${isAfterContent ? 'pt-0 md:pt-0 lg:pt-0' : ''} ${classes?.container ?? ''}`}
  bg={bg}
>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={{
      container: 'max-w-xl sm:mx-auto lg:max-w-2xl',
      title: 'text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading',
      subtitle: 'max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400',
    }}
  />


        {content && <div class="mb-12 text-lg dark:text-slate-400" set:html={content} />}


    <div
      id={chartId}
      style={`width:100%; height:${height};`}
      class="pt-8 pl-8 pr-8 rounded-md bg-white dark:bg-slate-900 shadow-xl dark:shadow-none dark:border dark:border-slate-700"
    ></div>

</WidgetWrapper>

<script define:vars={{ chartId, serializedOptions }}>
  (async () => {
    const echarts = await import(
      'https://cdn.jsdelivr.net/npm/echarts@5/dist/echarts.esm.min.js'
    );

    const container = document.getElementById(chartId);
    if (!container) return;

    let chart = null;
    const options = JSON.parse(serializedOptions);

    /* ===============================
       CORE LIFECYCLE
    =============================== */
    function init() {
      if (chart) return;
      if (!container.offsetWidth || !container.offsetHeight) return;

      chart = echarts.init(container);
      chart.setOption(options, true);
    }

    function destroy() {
      if (!chart) return;
      chart.dispose();
      chart = null;
    }

    function ensureChart() {
      if (!chart && container.offsetWidth && container.offsetHeight) {
        init();
      }
    }

    /* ===============================
       VISIBILITY (SCROLL)
    =============================== */
    const intersectionObserver = new IntersectionObserver(
      ([entry]) => {
        entry.isIntersecting ? init() : destroy();
      },
      { threshold: 0.1 }
    );

    intersectionObserver.observe(container);

    /* ===============================
       RESIZE
    =============================== */
    const resizeObserver = new ResizeObserver(() => {
      if (chart) chart.resize();
    });

    resizeObserver.observe(container);

    /* ===============================
       PAGE / TAB RESTORE (BFCache ðŸ”¥)
    =============================== */
    window.addEventListener('pageshow', (event) => {
      if (event.persisted) {
        requestAnimationFrame(ensureChart);
      }
    });

    document.addEventListener('visibilitychange', () => {
      if (!document.hidden) {
        requestAnimationFrame(ensureChart);
      }
    });

    /* ===============================
       ASTRO NAVIGATION CLEANUP
    =============================== */
    document.addEventListener('astro:before-swap', () => {
      destroy();
      intersectionObserver.disconnect();
      resizeObserver.disconnect();
    });
  })();
</script>

---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';

interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;

  options: Record<string, any>;
  height?: string;

  id?: string;
  isDark?: boolean;
  classes?: {
    container?: string;
  };
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  content = await Astro.slots.render('content'),
  isAfterContent = false,

  options,
  height = '400px',

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

// Unique chart id
const chartId = `echart-${Math.random().toString(36).slice(2, 11)}`;
const serializedOptions = JSON.stringify(options);
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-6xl mx-auto ${isAfterContent ? 'pt-0 md:pt-0 lg:pt-0' : ''} ${classes?.container ?? ''}`}
  bg={bg}
>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={{
      container: 'max-w-xl sm:mx-auto lg:max-w-2xl',
      title: 'text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading',
      subtitle: 'max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400',
    }}
  />


        {content && <div class="mb-12 text-lg dark:text-slate-400" set:html={content} />}

<div class="p-4 md:p-6 rounded-md shadow-xl dark:shadow-none dark:border dark:border-slate-600">
    <div
      id={chartId}
      style={`width:100%; height:${height};`}
    ></div>
</div>

</WidgetWrapper>

<script is:inline define:vars={{ chartOptions: serializedOptions, chartId }}>
  let chartInstance;

  async function initChart() {
    const container = document.getElementById(chartId);
    if (!container) return;

    // ECharts laden (nur einmal)
    const echarts = await import(
      "https://cdn.jsdelivr.net/npm/echarts@5/dist/echarts.esm.min.js"
    );

    // Falls noch ein Chart existiert → zerstören
    if (chartInstance) {
      chartInstance.dispose();
    }

    chartInstance = echarts.init(container);
    chartInstance.setOption(JSON.parse(chartOptions));
  }

  // Bei JEDEM Seitenaufruf (auch Back / / Navigation)
  document.addEventListener("astro:page-load", initChart);

  // Cleanup beim Verlassen der Seite
  document.addEventListener("astro:before-swap", () => {
    if (chartInstance) {
      chartInstance.dispose();
      chartInstance = null;
    }
  });

  // Resize
  window.addEventListener("resize", () => {
    if (chartInstance) {
      chartInstance.resize();
    }
  });
</script>
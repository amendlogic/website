---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  height?: string;
  options: Record<string, any>;
  id?: string;
  isDark?: boolean;
  classes?: { container?: string };
  bg?: string;
}

const {
  title,
  subtitle,
  tagline,
  height = '400px',
  options,
  id,
  classes = {},
  bg
} = Astro.props;

const chartId = `chartjs-${Math.random().toString(36).slice(2, 11)}`;
const serializedOptions = JSON.stringify(options);
---
<WidgetWrapper
  id={id}
  containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`}
  bg={bg}
>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={{
      container: 'max-w-xl sm:mx-auto lg:max-w-2xl',
      title: 'text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading',
      subtitle: 'max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400',
    }}
  />
  
  <div style={`width:100%; height:${height};`} id={chartId}></div>
</WidgetWrapper>

<script define:vars={{ chartId, serializedOptions }}>
  (async () => {
    const Chart = (await import('https://cdn.jsdelivr.net/npm/chart.js')).default;
    const container = document.getElementById(chartId);
    if (!container) return;

    const config = JSON.parse(serializedOptions);
    let chart = null;

    function init() {
      if (chart) return;
      chart = new Chart(container, config);
    }

    function destroy() {
      if (!chart) return;
      chart.destroy();
      chart = null;
    }

    function reinit() {
      destroy();
      init();
    }

    // Initial load
    requestAnimationFrame(init);

    // Resize
    window.addEventListener('resize', () => {
      if (chart) chart.resize();
    });

    // BFCache / Back button
    window.addEventListener('pageshow', () => {
      requestAnimationFrame(reinit);
    });

    // Tab visibility
    document.addEventListener('visibilitychange', () => {
      if (!document.hidden) requestAnimationFrame(reinit);
    });

    // Astro client navigation
    document.addEventListener('astro:after-swap', () => {
      requestAnimationFrame(reinit);
    });

    document.addEventListener('astro:before-swap', () => {
      destroy();
    });
  })();
</script>
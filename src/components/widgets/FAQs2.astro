---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Faqs as Props } from '~/types';

const {
  title = '',
  subtitle = '',
  tagline = '',
  items = [],
  columns = 2,
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  <div class={`grid ${columns === 1 ? 'grid-cols-1 max-w-4xl mx-auto' : 'grid-cols-2'} gap-y-8 md:gap-y-12`}>
    {items.map((item, index) => (
      <div class="border-b border-gray-200 dark:border-gray-700 pb-4">
        <button
          type="button"
          class="w-full flex items-start gap-3 text-left focus:outline-none"
          onClick={`
            const currentlyOpen = document.querySelector('[data-open="true"]');
            const targetWrapper = document.getElementById('faq-wrapper-${index}');
            const targetIcon = document.getElementById('faq-icon-${index}');

            // SchlieÃŸe anderes Item
            if (currentlyOpen && currentlyOpen !== targetWrapper) {
              currentlyOpen.style.maxHeight = null;
              currentlyOpen.removeAttribute('data-open');
              document.querySelector('[data-icon-open="true"]').classList.remove('rotate-90');
              document.querySelector('[data-icon-open="true"]').removeAttribute('data-icon-open');
            }

            // Toggle das geklickte Item
            if (targetWrapper.getAttribute('data-open') === 'true') {
              targetWrapper.style.maxHeight = null;
              targetWrapper.removeAttribute('data-open');
              targetIcon.classList.remove('rotate-90');
              targetIcon.removeAttribute('data-icon-open');
            } else {
              targetWrapper.style.maxHeight = targetWrapper.scrollHeight + 'px';
              targetWrapper.setAttribute('data-open', 'true');
              targetIcon.classList.add('rotate-90');
              targetIcon.setAttribute('data-icon-open', 'true');
            }
          `}
        >
          <span
            id={`faq-icon-${index}`}
            class="flex-shrink-0 mt-1 w-6 h-6 text-primary transition-transform duration-300 transform"
          >
            <i class="icon tabler tabler-chevron-right"></i>
          </span>
          <span class="font-medium text-lg">{item.title}</span>
        </button>

        <div
          id={`faq-wrapper-${index}`}
          class="overflow-hidden max-h-0 transition-all duration-300"
        >
          <p class="mt-2 text-gray-600 dark:text-gray-300">
            {item.description}
          </p>
        </div>
      </div>
    ))}
  </div>
</WidgetWrapper>
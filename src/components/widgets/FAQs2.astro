---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Faqs as Props } from '~/types';
import Icon from '~/components/ui/Icon.astro'; // Tabler Icons

const {
  title = '',
  subtitle = '',
  tagline = '',
  items = [],
  columns = 2,
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  <div class={`grid ${columns === 1 ? 'grid-cols-1 max-w-4xl mx-auto' : 'grid-cols-2'} gap-y-8 md:gap-y-12`}>
    {items.map((item, index) => (
      <div class="border-b border-gray-200 dark:border-gray-700 pb-4">
        <button
          type="button"
          class="w-full flex items-start gap-3 text-left focus:outline-none"
          data-index={index}
        >
          <span
            id={`faq-${index}-icon`}
            class="flex-shrink-0 mt-1 w-6 h-6 text-primary transition-transform duration-300 transform"
          >
            <!-- Tabler chevron-right Icon -->
            <i class="tabler tabler-chevron-right"></i>
          </span>
          <span class="font-medium text-lg">{item.title}</span>
        </button>

        <div
          id={`faq-${index}-desc`}
          class="overflow-hidden max-h-0 transition-all duration-300 mt-2 text-gray-600 dark:text-gray-300"
        >
          {item.description}
        </div>
      </div>
    ))}
  </div>

  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      const buttons = document.querySelectorAll('[data-index]');
      buttons.forEach(button => {
        button.addEventListener('click', () => {
          const index = button.getAttribute('data-index');
          const desc = document.getElementById(`faq-${index}-desc`);
          const icon = document.getElementById(`faq-${index}-icon`);
          
          // SchlieÃŸe alle anderen
          document.querySelectorAll('[id$="-desc"]').forEach(d => {
            if (d !== desc) {
              d.style.maxHeight = null;
              d.removeAttribute('data-open');
            }
          });
          document.querySelectorAll('[id$="-icon"]').forEach(i => {
            if (i !== icon) {
              i.classList.remove('rotate-90');
            }
          });

          // Toggle das geklickte Item
          if (desc.getAttribute('data-open') === 'true') {
            desc.style.maxHeight = null;
            desc.removeAttribute('data-open');
            icon.classList.remove('rotate-90');
          } else {
            desc.style.maxHeight = desc.scrollHeight + 'px';
            desc.setAttribute('data-open', 'true');
            icon.classList.add('rotate-90');
          }
        });
      });
    });
  </script>
</WidgetWrapper>
---
import Headline from '~/components/ui/Headline.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Faqs as Props } from '~/types';

const {
  title = '',
  subtitle = '',
  tagline = '',
  items = [],
  columns = 2,
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  
  <ItemGrid
    items={items.map((item, index) => ({
      ...item,
      dataIndex: index, // für JS
      descriptionClass: 'max-h-0 overflow-hidden transition-all duration-300 mt-2 text-gray-600 dark:text-gray-300', // initial hidden
      iconClass: 'flex-shrink-0 mt-1 w-6 h-6 text-primary transition-transform duration-300 transform'
    }))}
    columns={columns}
    defaultIcon="tabler:chevron-right"
    classes={{
      container: `${columns === 1 ? 'max-w-4xl' : ''} gap-y-8 md:gap-y-12`,
      panel: 'max-w-none',
      icon: 'flex-shrink-0 mt-1 w-6 h-6 text-primary transition-transform duration-300 transform',
    }}
  />

  <WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  
  <ItemGrid
    items={items.map((item, index) => ({
      ...item,
      dataIndex: index, // für JS
      descriptionClass: 'max-h-0 overflow-hidden transition-all duration-300 mt-2 text-gray-600 dark:text-gray-300', // initial hidden
      iconClass: 'flex-shrink-0 mt-1 w-6 h-6 text-primary transition-transform duration-300 transform'
    }))}
    columns={columns}
    defaultIcon="tabler:chevron-right"
    classes={{
      container: `${columns === 1 ? 'max-w-4xl' : ''} gap-y-8 md:gap-y-12`,
      panel: 'max-w-none',
      icon: 'flex-shrink-0 mt-1 w-6 h-6 text-primary transition-transform duration-300 transform',
    }}
  />

  <script is:inline>
    // Minimal JS Accordion
    document.addEventListener('DOMContentLoaded', () => {
      const panels = document.querySelectorAll('[data-index]');
      panels.forEach(panel => {
        panel.addEventListener('click', () => {
          const index = panel.getAttribute('data-index');
          const desc = panel.querySelector('.description');
          const icon = panel.querySelector('.icon');

          // Schließe alle anderen
          document.querySelectorAll('.description').forEach(d => {
            if (d !== desc) {
              d.style.maxHeight = null;
              d.removeAttribute('data-open');
            }
          });
          document.querySelectorAll('.icon').forEach(i => {
            if (i !== icon) {
              i.classList.remove('rotate-90');
            }
          });

          // Toggle das geklickte Item
          if (desc.getAttribute('data-open') === 'true') {
            desc.style.maxHeight = null;
            desc.removeAttribute('data-open');
            icon.classList.remove('rotate-90');
          } else {
            desc.style.maxHeight = desc.scrollHeight + 'px';
            desc.setAttribute('data-open', 'true');
            icon.classList.add('rotate-90');
          }
        });
      });
    });
  </script>
</WidgetWrapper>
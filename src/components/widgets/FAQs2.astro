---
import Headline from '~/components/ui/Headline.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Faqs as Props } from '~/types';

const {
  title = '',
  subtitle = '',
  tagline = '',
  items = [],
  columns = 2,
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  <div class={`grid ${columns === 1 ? 'grid-cols-1' : 'grid-cols-2'} gap-y-8 md:gap-y-12`}>
    {items.map((item, index) => (
      <div class="border-b border-gray-200 dark:border-gray-700 pb-4">
        <button
          type="button"
          class="w-full text-left flex justify-between items-center font-medium text-lg"
          onClick={`document.getElementById('faq-desc-${index}').classList.toggle('hidden')`}
        >
          {item.title}
          <span class="ml-2 transition-transform duration-300" id={`faq-icon-${index}`}>+</span>
        </button>
        <p id={`faq-desc-${index}`} class="mt-2 hidden text-gray-600 dark:text-gray-300">
          {item.description}
        </p>
      </div>
    ))}
  </div>
</WidgetWrapper>